{
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules",
            "node_modules/**/*.ts",
            "**/node_modules/pregenerated-primes/index.d.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "interface-name": false,
        "max-line-length": [true, 140],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "private-static-field",
                    "static-method",
                    "instance-field",
                    "constructor",
                    "instance-method"
                ],
                "alphabetize": true
            }
        ],
        "no-console": [true, "warning"],
        "quotemark": false,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore"
        ]
    },
    "rulesDirectory": []
}
